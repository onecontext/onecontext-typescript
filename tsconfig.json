{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
